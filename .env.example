# =============================================================================
# LUMIERA - WhatsApp Agentic Copilot Configuration
# =============================================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Application port for webhook server
PORT=8000

# Application host
HOST=0.0.0.0

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# TWILIO - WhatsApp API
# =============================================================================
# Find these at: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# Your Twilio WhatsApp number (format: whatsapp:+14155238886)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Webhook URL for Twilio callbacks (your public URL)
TWILIO_WEBHOOK_URL=https://your-domain.com/webhook/whatsapp

# =============================================================================
# ANTHROPIC - Claude API
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model to use (recommended: claude-opus-4-5-20251101)
ANTHROPIC_MODEL=claude-opus-4-5-20251101

# Max tokens for responses
ANTHROPIC_MAX_TOKENS=4096

# Temperature for response generation (0.0 - 1.0)
ANTHROPIC_TEMPERATURE=0.7

# =============================================================================
# SUPABASE - Database & Storage
# =============================================================================
# Find these at: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database connection (optional, for direct connections)
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# PLANRADAR - Project Management API
# =============================================================================
# PlanRadar API credentials
PLANRADAR_API_KEY=your_planradar_api_key_here
PLANRADAR_API_URL=https://api.planradar.com/v1

# PlanRadar organization/account ID
PLANRADAR_ACCOUNT_ID=your_account_id_here

# =============================================================================
# LANGCHAIN SETTINGS
# =============================================================================
# LangChain API key (optional, for LangSmith tracing)
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Enable LangSmith tracing (true/false)
LANGCHAIN_TRACING_V2=false

# LangSmith project name
LANGCHAIN_PROJECT=lumiera-whatsapp-copilot

# LangChain endpoint (optional)
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# TRANSLATION SETTINGS
# =============================================================================
# Default language for the system (ISO 639-1 code)
DEFAULT_LANGUAGE=fr

# Supported languages (comma-separated ISO 639-1 codes)
# Western European: fr, en, es, pt, de, it
# Eastern European: ro, pl, cs, sk, hu, bg, sr, hr, sl, uk, ru, lt, lv, et, sq, mk, bs
# Middle Eastern: ar
SUPPORTED_LANGUAGES=fr,en,es,pt,ar,de,it,ro,pl,cs,sk,hu,bg,sr,hr,sl,uk,ru,lt,lv,et,sq,mk,bs

# =============================================================================
# AUDIO TRANSCRIPTION
# =============================================================================
# OpenAI API key for Whisper (audio transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Whisper model to use
WHISPER_MODEL=whisper-1

# Target language for transcription
TRANSCRIPTION_TARGET_LANGUAGE=fr

# =============================================================================
# ESCALATION & HUMAN HANDOFF
# =============================================================================
# Maximum time before auto-release from escalation (in hours)
MAX_ESCALATION_TIME=24

# Admin notification webhook URL (optional)
ADMIN_NOTIFICATION_WEBHOOK=https://your-admin-notification-endpoint.com

# Admin notification email (optional)
ADMIN_EMAIL=admin@lumiera.com

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================
# Maximum requests per user per minute
RATE_LIMIT_PER_MINUTE=10

# Response timeout in seconds
RESPONSE_TIMEOUT=30

# Maximum concurrent API calls
MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# MEDIA STORAGE
# =============================================================================
# Supabase storage bucket for media files
MEDIA_STORAGE_BUCKET=whatsapp-media

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# Allowed media types (comma-separated)
ALLOWED_MEDIA_TYPES=image/jpeg,image/png,image/gif,audio/ogg,audio/mpeg,audio/mp4

# =============================================================================
# SECURITY
# =============================================================================
# Secret key for JWT tokens and encryption
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Allowed webhook IPs (comma-separated, for Twilio verification)
ALLOWED_WEBHOOK_IPS=

# Enable webhook signature verification (true/false)
VERIFY_WEBHOOK_SIGNATURE=true

# =============================================================================
# REDIS (Optional - for caching and rate limiting)
# =============================================================================
# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# Redis connection timeout
REDIS_TIMEOUT=5

# Enable Redis caching (true/false)
ENABLE_REDIS_CACHE=false

# =============================================================================
# MONITORING & OBSERVABILITY (Optional)
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=

# Enable Sentry error tracking (true/false)
ENABLE_SENTRY=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (true/false) - DO NOT USE IN PRODUCTION
DEBUG=false

# Enable hot reload for development
HOT_RELOAD=true

# Mock external APIs for testing (true/false)
MOCK_EXTERNAL_APIS=false
